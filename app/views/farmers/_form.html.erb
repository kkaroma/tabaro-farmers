
<%= simple_form_for(@farmer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
      <%= f.input :name, input_html: { class: 'form-control' }, label: "Name" %>
    </div>

    <div class="form-group">
      <%= f.input :code, input_html: { class: 'form-control' }, label: "Code" %>
    </div>

    <div class="form-group">
      <%= f.input :nida, input_html: { class: 'form-control' }, label: "NIDA" %>
    </div>

    <div class="form-group">
      <%= f.association :village, input_html: { class: 'form-control' }, label: "Village" %>
    </div>

    <div class="form-group">
      <%= f.association :parish, input_html: { class: 'form-control' }, label: "Parish" %>
    </div>

    <div class="form-group">
      <%= f.input :phone, input_html: { class: 'form-control' }, label: "Phone" %>
    </div>
     <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary mt-5' %>
  </div>
  </div>
  
<% end %>
