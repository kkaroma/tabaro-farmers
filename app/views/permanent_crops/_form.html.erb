
<%= simple_form_for(@permanent_crop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :field_name %>
    <%= f.association :crop %>
    <%= f.input :acres %>
    <%= f.input :number_of_trees %>
    <%= f.input :date_planted %>
    <%= f.input :estimated_yield %>
    <%= f.input :last_chemical %>
    <%= f.input :organic %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
