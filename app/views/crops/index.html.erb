<p style="color: green"><%= notice %></p>

<h1 class="display-4">Crops</h1>


<div id="crops">
<table class="table">
  <thead>
    <th> Crops </th>
    <th>More...</th>
  </head>
  <% @crops.each do |crop| %>
    <tr>
      <td> <%= crop.name %> </td>
      <td> <%= link_to "Show this crop", crop %> </td>
    </tr>
  <% end %>
  </table>
  <%= link_to "Add New crop", new_crop_path, class: "btn btn-success" %> 
</div>


